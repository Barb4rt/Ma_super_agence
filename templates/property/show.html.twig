{% extends "base.html.twig" %} {% block title property.title %} {% block body %}
<div class="jumbotron">
  <div class="container">
    <h1>{{ property.title }}</h1>
    <div class="row">
      <div class="col-md-8"></div>
      <div class="col-md-4">
        <h1>{{ property.title }}</h1>
        <h2>{{ property.rooms }} pièces - {{ property.surface }} m²</h2>
        <div class="text-primary" style="font-size: 4rem; font-weight: bold">
          {{ property.formatedprice }} €
        </div>
        <a href="#" class="btn btn-primary">Contacter l'agence</a>
      </div>
    </div>
  </div>
</div>
<div class="container mt-4">
  <nav class="nav nav-tabs mb-4" id="tab"></nav>
  <p>{{ property.description | nl2br }}</p>
  <div class="row">
    <div class="col-md-8">
      <h2>Caractéristiques</h2>
      <table class="table-stripped">
        <tr>
          <td>Surface habitable</td>
          <td>{{ property.surface }} m²</td>
        </tr>
        <tr>
          <td>Nombres de pièces</td>
          <td>{{ property.rooms }}</td>
        </tr>
        <tr>
          <td>Nombres de chambres</td>
          <td>{{ property.bedrooms }}</td>
        </tr>
        <tr>
          <td>Etage</td>
          <td>{{ property.floor }}</td>
        </tr>
        <tr>
          <td>Chauffage</td>
          <td>{{ property.heatType }}</td>
        </tr>
      </table>
    </div>
    <div class="col-md-4">
      <h2>Spécificité</h2>
    </div>
  </div>
</div>
{% endblock %}
